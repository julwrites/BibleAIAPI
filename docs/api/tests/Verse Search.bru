meta {
  name: Verse Search
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/query
  body: json
  auth: inherit
}

headers {
  X-API-Key: {{apiKey}}
  Content-Type: application/json
}

body:json {
  {
      "query": {
          "verses": ["John 3:16"]
      },
      "context": {
          "user": {
              "version": "ESV"
          }
      }
  }
}

tests {
  test("should return 200 OK", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("should return verse text", function() {
    const data = res.getBody();
    expect(data.verse).to.contain("For God so loved the world");
  });
}
